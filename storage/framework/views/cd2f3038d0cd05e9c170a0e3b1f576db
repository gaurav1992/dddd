


<?php $__env->startSection('customjavascript'); ?>
<script>
var messageUrl = "<?php echo route('messageDel'); ?>";

$(document).ready(function() {
	$(document ).on( "click", "#hiddenUser" , function() {
		var r=confirm("Do you want to perform action!");
		if(r == true){
			var id= $(this).data('userid');
			var RowId = $(this).closest("tr");

			$.ajax({
				type : "get",
				url : messageUrl,
				data : 'id='+id+'&_token='+CSRF_TOKEN,
				success:function(returnData)
				{
					if(returnData=='deleteSuccess')
					{
						RowId.remove();

					}
					
				}
				
			});
		}
		
	});
	var oTable=$('#nrmessageList').DataTable({
			"language": {
			"paginate": {
			"previous": "<<",
			"next":">>"
		}},

		"processing": true,
		"responsive":true,
		"serverSide": true,
		"ajax": {
			"url": "<?php echo route('nrmessagelistajax'); ?>",
		}
		
	});

});

</script>


<?php $__env->stopSection(); ?>

<?php $__env->startSection('content-header'); ?>
	<h1 style="text-align:center;">
		<?php echo isset($title) ? $title : 'Contact Messages'; ?> 
	</h1>
<div style="clear:both"></div>

<?php $__env->stopSection(); ?>
<?php $__env->startSection('content'); ?>
<div style="clear:both;margin-bottom:20px;"></div>
<?php if(Session::has('message')): ?>
<p class="alert <?php echo e(Session::get('alert-class', 'alert-info')); ?>"><?php echo e(Session::get('message')); ?></p>
<?php endif; ?>
	<div class="row">
        <div class="col-md-12">
          <div class="box">
            <div class="table-responsive">
	<table class="table" id="nrmessageList" style="width:100%">
		<thead>
			<th>S.No</th>
			
			<th>Full Name</th>
			<th>Email</th>
			<th>Message</th>			
			<th>Status</th>
			<th class="">Action</th>
		</thead>
	</table>
				</div>
          </div>
        </div>
      </div>
<?php $__env->stopSection(); ?>

